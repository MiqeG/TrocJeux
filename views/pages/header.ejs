<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>TrocJeux</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="assets/semantic/semantic.min.css">
  <link rel="stylesheet" type="text/css" media="screen" href="assets/sitecss/sitecss.css">
  <script src="assets/jquery/jquery-3.3.1.min.js"></script>
  <script src="assets/semantic/semantic.min.js"></script>
  <script src="assets/sitescripts/sitescript.js"></script>
 
</head>

<body style="margin-bottom:5%">
  <div class="ui sidebar vertical left menu overlay visible inverted"
    style="-webkit-transition-duration: 0.1s; overflow: visible !important;">
    <div class="item logo">
      <div class="paddingLogo">
        <img class="frontlogo" onclick="window.location.href='/'" src="/assets/img/logo.png" />

      </div>
      <img class="frontlogo" onclick="window.location.href='/'" src="/assets/img/logo.png" style="display: none" />
    </div>
    <div class="ui accordion">

      <% if(auth==false){ %>

      <a class="item button" style="color:rgb(50, 240, 240)" href="/inscription"><i class="users icon"
          style="color:white"></i><b>Rejoignez nous!</b></a>


      <a class="item Connexion" style="color:rgb(50, 240, 240)"><i class="sign-in alternate icon"
          style="color:white"></i><b>Se Connecter!</b> </a> &nbsp


      <% }else if(auth==true){ %>

      <a class="item tealColor" href="/espacemembre" style="color:white"><i class="user icon"
        style="color:rgb(50, 240, 240)"></i><b> Bonjour &nbsp <%= user.Prenom %> !</b></a>
      <a class="item tealColor" href="/deposer" style="color:white"><i class="tasks icon"
        style="color:rgb(50, 240, 240)"></i><b> Déposer une annonce...</b></a>

      <a class="item LogOut" style="color:white"><i class="sign-out alternate icon"
        style="color:rgb(50, 240, 240)"></i><b>Se &nbsp Deconnecter!</b> </a> &nbsp

      <% } %>

      <div class="title item" style="color:white">
        <i class="dropdown icon tealColor"></i> Catégories
      </div>
      <div class="content">
        <% categories.forEach(element => { %>
        <a class="item" style="color:rgb(50, 240, 240)"><%= element %>
        </a>
        <% }); %>



      </div>






      <div class="title item" style="color:white">
        <i class="dropdown icon tealColor"></i> Pages
      </div>
      <div class="content">
        <a class="item" style="color:rgb(50, 240, 240)" href="profile.html">Profile
        </a>

        <a class="item" style="color:rgb(50, 240, 240)" href="settings.html">Settings
        </a>


      </div>


    </div>
    <div class="ui dropdown item   displaynone inverted teal">
      <z></z>
      <i class="icon demo-icon user icon-heart "></i>

      <div class="menu">

        <div class="ui divider"></div>
        <% if(auth==false){ %>

        <a class="item " href="/inscription"><i class="users icon"></i><b>Rejoignez nous!</b></a>


        <a class="item Connexion"><i class="sign-in alternate icon"></i><b>Se Connecter!</b> </a> &nbsp


        <% }else if(auth==true){ %>

        <a class="item " href="/espacemembre"><i class="user icon"></i><b>Bonjour <%= user.Prenom %> !</b></a>
        <a class="item " href="/deposer"><i class="tasks icon"></i><b>Déposer une annonce...</b></a>


        <a class="item LogOut"><i class="sign-out alternate icon"></i><b>Se Deconnecter!</b> </a> &nbsp

        <% } %>
      </div>
    </div>
    <div class="ui dropdown item displaynone inverted teal">
      <z>Catégories</z>
      <i class="icon demo-icon gamepad icon-globe "></i>

      <div class="menu blackColor">
        <div class="header">
          Catégories
        </div>
        <div class="ui divider " style="background-color:rgb(50, 240, 240)"></div>
        <% categories.forEach(element => { %>
        <a class="item "><b><%= element %></b>
        </a>
        <% }); %>

      </div>
    </div>
    <div class="ui dropdown item displaynone">
      <z></z>
      <i class="icon demo-icon  icon-params alarm"></i>




    </div>
  </div>
  </div>
  <div class="pusher">

    <div class="ui inverted menu asd fixed borderless inverted teal "
      style="border-radius: 0!important; border: 0; margin-left: 260px; -webkit-transition-duration: 0.1s;">

      <a class="item openbtn">
        <i class="icon content"></i>
      </a>


      <div class="ui category search">
        <div class="ui icon input">
          <input class="prompt" type="text" placeholder="Rechercher...">
          <i class="search icon"></i>
        </div>
        <div class="results"></div>
      </div>


    </div>


  </div>
  </div>
  </div>

  <div class="ui basic modal" id="connexionmodal">



    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui image content">
          <div class="content">
            Connectez Vous...
          </div>
        </h2>
        <form action="/connexion" method="POST" class="ui large form">
          <div class="ui stacked secondary  segment">
            <div class="field">
              <div class="ui left icon input">
                <i class="user icon"></i>
                <input type="text" name="username" id="username" placeholder="E-mail ou nom d'utilisateur">
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <input type="password" name="password" id="password" placeholder="Mot de passe">
              </div>
            </div>
            <input type="submit" class="ui fluid large teal submit button" id="LogIn" value="Connexion"></input>
          </div>



        </form>

        <div class="ui message">
          S'Inscrire? <a style="color:teal" href="/inscription">Inscription</a>
        </div>
      </div>
    </div>
  </div>
  </div>
  <div class="ui main container  ">
      <div class="ui basic modal" id="inscriptionmodal" >
          <div class="ui icon header">
           
            <div class="cetered">
                <% if(locals.flash && locals.flash.error){ %>
                  <div class="ui     red basic cancel inverted" style= "color:rgb(219, 77, 77)" >
                    <i class="meh outline icon"></i><span id="sessionFlash"><%= flash.error %></span> 
                  </div>
              
                  <% } %>
                  <% if(locals.flash && locals.flash.success){ %>
                  <div class="ui  green ok inverted" style= "color:rgb(53, 207, 104)">
                    <i class="smile outline icon"></i><span id="sessionFlash"><%= flash.success %></span>
                  </div>
              
                  <% } %>
            </div>
          </div>
        
          <div class="actions">
           
            <div class="ui green ok inverted button">
              <i class="checkmark icon"></i>
              Ok
            </div>
          </div>
        </div>
     
   