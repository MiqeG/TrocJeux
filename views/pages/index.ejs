    if($('#indexcodepostal').val()=='CP introuvable'){
      $('#indexcodepostal').val('')
    }
  })
$('#indexcodepostal').change(function(){

  $.ajax({
      url: "/ajaxCodePostal",
      type: "get", //send it through get method
